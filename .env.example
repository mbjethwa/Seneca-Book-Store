# Environment Variables Configuration
# Copy this file to .env and update with your actual values

# JWT Secret Key - Generate with: openssl rand -base64 32
SECRET_KEY=your-secret-key-here

# Database URLs
DATABASE_URL=sqlite:///./users.db
CATALOG_DATABASE_URL=sqlite:///./catalog.db
ORDER_DATABASE_URL=sqlite:///./orders.db

# Service URLs (for development)
USER_SERVICE_URL=http://localhost:8001
CATALOG_SERVICE_URL=http://localhost:8002
ORDER_SERVICE_URL=http://localhost:8003
FRONTEND_URL=http://localhost:3000

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Service Ports
USER_SERVICE_PORT=8001
CATALOG_SERVICE_PORT=8002
ORDER_SERVICE_PORT=8003
FRONTEND_PORT=3000

# Production Database (PostgreSQL example)
# DATABASE_URL=postgresql://user:password@localhost/bookstore_users
# CATALOG_DATABASE_URL=postgresql://user:password@localhost/bookstore_catalog
# ORDER_DATABASE_URL=postgresql://user:password@localhost/bookstore_orders

# Monitoring
GRAFANA_ADMIN_PASSWORD=your-grafana-password-here
